<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Стиль для TextView заголовка приложения-->
    <style name="titleAppTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/font_size_default_title</item>
    </style>

    <!--Стиль для TextView обычного текста-->
    <style name="textTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/font_size_default_text</item>
    </style>

    <!--Стиль для TextView заголовков-->
    <style name="titleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/font_size_default_text</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_default_button</item>
        <item name="android:minHeight">@dimen/min_height_button</item>
        <item name="android:paddingStart">@dimen/padding_start_end_button</item>
        <item name="android:paddingEnd">@dimen/padding_start_end_button</item>
        <item name="android:paddingTop">@dimen/padding_top_button</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_button</item>
        <item name="android:background">@drawable/light_blue_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>